@{
}
@model List<Tarefa>

<h2>Lista de Tarefas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Tarefa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>TarefaId</th>
            <th>Nome da Tarefa</th>
            <th>Data de Início</th>
            <th>Data de Conclusão</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.TarefaId</td>
                <td>@tarefa.NomeTarefa</td>
                <td>@tarefa.DataInico</td>
                <td>@tarefa.DataFim</td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@tarefa.TarefaId">Editar</a>
                    <a asp-action="Concluida" class="btn btn-primary" asp-route-id="@tarefa.TarefaId">Concluida</a>
                    <a asp-action="PorFazer" class="btn btn-primary" asp-route-id="@tarefa.TarefaId">A Realizar</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@tarefa.TarefaId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
