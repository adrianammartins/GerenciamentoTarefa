@{
}
@model List<Tarefa>

<h2>Tarefas Por Fazer</h2>
<hr/>
<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Tarefa</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>Tarefa</th>
            <th>Data Inicio</th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.NomeTarefa</td>
                <td>@tarefa.DataInico.ToString("dd/MM/yyyy HH:mm:ss")</td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@tarefa.TarefaId">Editar</a>
                    <a asp-action="Detalhes" class="btn btn-primary" asp-route-id="@tarefa.TarefaId">Detalhes</a>
                    <a asp-action="Concluir" class="btn btn-primary" asp-route-id="@tarefa.TarefaId">Concluída</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@tarefa.TarefaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
